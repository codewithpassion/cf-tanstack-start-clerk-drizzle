{
	"name": "cf-tanstack-start",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "sh -c '[ \"$CLAUDE_CODE_REMOTE\" = \"true\" ] && unset HTTP_PROXY HTTPS_PROXY http_proxy https_proxy GLOBAL_AGENT_HTTP_PROXY GLOBAL_AGENT_HTTPS_PROXY; vite dev'",
		"build": "vite build",
		"serve": "vite preview",
		"test": "vitest run",
		"deploy": "bun run build && wrangler deploy",
		"preview": "bun run build && vite preview",
		"cf-typegen": "wrangler types workers/worker-configuration.d.ts --env-interface CloudflareBindings",
		"check:tsc": "bunx tsc --noEmit -p ./tsconfig.json",
		"biome:check": "biome check --fix && biome format --write",
		"check": "bun cf-typegen && bun run build && bun run biome:check && bun run check:tsc",
		"tail:prod": "wrangler tail -e production",
		"tail:staging": "wrangler tail -e staging",
		"db:apply": "wrangler d1 migrations apply DB --local",
		"db:deploy:prod": "drizzle-kit generate && wrangler d1 migrations apply app-db --remote --env production",
		"db:deploy:staging": "drizzle-kit generate && wrangler d1 migrations apply app-db --remote --env staging",
		"db:deploy:staging-bo": "drizzle-kit generate && wrangler d1 migrations apply app-db --remote --env staging-bo",
		"db:gen": "drizzle-kit generate",
		"db:update": "drizzle-kit generate && wrangler d1 migrations apply app-db --local",
		"prepare": "husky"
	},
	"dependencies": {
		"-": "^0.0.1",
		"@clerk/backend": "^2.20.0",
		"@clerk/clerk-react": "^5.53.8",
		"@clerk/shared": "^3.31.1",
		"@clerk/tanstack-react-start": "^0.26.9",
		"@cloudflare/vite-plugin": "^1.14.0",
		"@hono/clerk-auth": "^3.0.3",
		"@radix-ui/react-slot": "^1.2.4",
		"@tailwindcss/vite": "^4.0.6",
		"@tanstack/react-devtools": "^0.7.0",
		"@tanstack/react-router": "^1.132.0",
		"@tanstack/react-router-devtools": "^1.132.0",
		"@tanstack/react-router-ssr-query": "^1.131.7",
		"@tanstack/react-start": "^1.132.0",
		"@tanstack/router-plugin": "^1.132.0",
		"D": "^1.0.0",
		"better-sqlite3": "^12.5.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cookie": "^1.0.2",
		"dotenv": "^17.2.3",
		"drizzle-kit": "^0.31.7",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.10.4",
		"lucide-react": "^0.555.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"srvx": "0.8.15",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.0.6",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"devDependencies": {
		"@testing-library/dom": "^10.4.0",
		"@testing-library/react": "^16.2.0",
		"@types/node": "^24.10.0",
		"@types/react": "^19.2.0",
		"@types/react-dom": "^19.2.0",
		"@vitejs/plugin-react": "^5.0.4",
		"biome": "^0.3.3",
		"husky": "^9.1.7",
		"jsdom": "^27.0.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.7.2",
		"vite": "^7.1.7",
		"vitest": "^3.0.5",
		"web-vitals": "^5.1.0",
		"wrangler": "^4.46.0"
	}
}